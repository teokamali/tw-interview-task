{
   "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
   "vcs": {
      "enabled": false,
      "clientKind": "git",
      "useIgnoreFile": false
   },
   "files": {
      "ignoreUnknown": false,
      "ignore": []
   },

   "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "lineWidth": 120,
      "indentWidth": 3,
      "attributePosition": "multiline",
      "useEditorconfig": true
   },
   "organizeImports": {
      "enabled": true
   },
   "linter": {
      "enabled": true,
      "rules": {
         "a11y": {
            "useButtonType": "off"
         },
         "recommended": true,
         "complexity": { "noBannedTypes": "off" },
         "correctness": {
            "noUnusedImports": {
               "level": "error",
               "fix": "safe"
            }
         }
      }
   },
   "javascript": {
      "linter": {
         "enabled": true
      },

      "formatter": {
         "enabled": true,
         "quoteStyle": "double",
         "semicolons": "always"
      }
   }
}
